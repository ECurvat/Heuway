{% extends "base.html.twig" %}

{% block title %}Heuway -  Contrat{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mt-4">Ajout d'un nouveau contrat</h1>
    {{ form_start(form) }}
    <div class="row">
        <div class="col">
            <div class="form-group">
                {{ form_label(form.id) }}
                {{ form_widget(form.id) }}
                <div class="invalid-feedback">{{ form_errors(form.id) }}</div>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                {{ form_label(form.debut) }}
                {{ form_widget(form.debut) }}
                <div class="invalid-feedback">{{ form_errors(form.debut) }}</div>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                {{ form_label(form.fin) }}
                {{ form_widget(form.fin) }}
                <div class="invalid-feedback">{{ form_errors(form.fin) }}</div>
            </div>
        </div>
    </div>    
    {{ form_end(form) }}
</div>
{% endblock %}